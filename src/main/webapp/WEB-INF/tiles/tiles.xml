<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="default" template="/WEB-INF/view/layout/default.jsp">
        <put-attribute name="header" value="/WEB-INF/view/layout/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/view/layout/footer.jsp" />
        <put-attribute name="body" value="" />
    </definition>

    <definition name="*/*" extends="default">
        <put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
    </definition>

    <definition name="login/index" template="/WEB-INF/view/login/index.jsp">

    </definition>
</tiles-definitions>